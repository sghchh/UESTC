<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        apps:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="126dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/recycler_item_image"
                android:scaleType="fitXY"
                android:src="@mipmap/earth"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/recycler_item_college"
                android:textColor="#FFFFFFFF"
                android:textSize="11dp"
                android:text="学院名"
                android:layout_marginStart="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"/>
            <TextView
                android:id="@+id/recycler_item_rank"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="19dp"
                android:text="答辩序号："
                android:textSize="9dp"
                android:textColor="#FFFFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/recycler_item_class"
                android:layout_toEndOf="@id/recycler_item_rank"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="班号："
                android:textSize="9dp"
                android:textColor="#FFFFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/recycler_item_detail"
                android:padding="0dp"
                android:layout_alignBottom="@id/recycler_item_class"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:text="查看详情"
                android:textColor="#FFFFFFFF"
                android:textSize="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.example.as.uestc.Answer.TickView.TickView
                apps:radius="14dp"
                apps:clickable="false"
                apps:check_base_color="#9900FF00"
                android:id="@+id/recycler_item_tick"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>