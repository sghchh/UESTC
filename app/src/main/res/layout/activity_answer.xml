<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="horizontal"
    tools:context="com.example.as.uestc.Answer.view.AnswerActivity">

    <RelativeLayout
        android:layout_weight="0.8"
        android:background="#FFFF0000"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <com.example.as.uestc.Answer.CircleImageView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/head"
            app:civ_circle_background_color="#FFFFFFFF"
            android:id="@+id/answer_activity_head"
            android:layout_width="42dp"
            android:layout_height="42dp" />
        <TextView
            android:id="@+id/test"
            android:layout_below="@id/answer_activity_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/answer_activity_head"
            android:layout_alignStart="@id/answer_activity_head"
            android:text="ceshi"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView

        android:background="#56000000"
        android:layout_weight="3.2"
        android:id="@+id/answer_acitvity_recycler"
        android:layout_width="0dp"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:layout_weight="6.7"
        android:id="@+id/answer_activity_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent">

    </FrameLayout>



</LinearLayout>
