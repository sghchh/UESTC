<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="13dp"
    android:layout_width="240dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#66FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.as.uestc.Answer.CircleImageView
            android:id="@+id/answer_dialog_details_back"
            android:src="@drawable/cancle"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="#66FFFFFF"
            android:id="@+id/answer_dialog_details_title"
            android:text="评分细则"
            android:gravity="center"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:background="#66FFFFFF"
            android:id="@+id/answer_dialog_details_detail1"
            android:layout_below="@id/answer_dialog_details_title"
            android:text="  *   保留小数点后一位"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/answer_dialog_details_detail2"
            android:layout_below="@id/answer_dialog_details_detail1"
            android:text="  *   保留小数点后一位"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/answer_dialog_details_detail3"
            android:layout_below="@id/answer_dialog_details_detail2"
            android:text="  *   保留小数点后一位"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>