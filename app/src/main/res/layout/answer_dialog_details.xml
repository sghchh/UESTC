<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="13dp"
    android:layout_width="240dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#66FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.as.uestc.Answer.CircleImageView
            android:id="@+id/answer_dialog_details_back"
            android:src="@drawable/cancle"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="#66FFFFFF"
            android:id="@+id/answer_dialog_details_title"
            android:text="评分细则"
            android:textStyle="bold"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:background="#66FFFFFF"
            android:textStyle="bold"
            android:id="@+id/answer_dialog_details_detail1"
            android:layout_below="@id/answer_dialog_details_title"
            android:text="评分采用100分制，分值保留到小数点后一位"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/answer_dialog_details_line1"
            android:layout_below="@id/answer_dialog_details_detail1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/answer_dialog_details_action"
                android:textStyle="bold"
                android:text="  1、答辩现场表现 ——55分"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/answer_dialog_details_action1"
                android:text="     ①自我展示效果   30分"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/answer_dialog_details_action2"
                android:text="     ②特色鲜明       25分"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer_dialog_details_line2"
            android:layout_below="@id/answer_dialog_details_line1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/answer_dialog_details_question"
                android:text="  2、回答问题部分 ——35分"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/answer_dialog_details_question1"
                android:text="     ①合理、逻辑性强  20分"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/answer_dialog_details_question2"
                android:text="     ②语言组织能力    15分"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer_dialog_details_line3"
            android:layout_below="@id/answer_dialog_details_line2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/answer_dialog_details_show"
                android:text="  3、答辩材料展示——10分"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/answer_dialog_details_show1"
                android:text="     ①材料重点突出    5分"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/answer_dialog_details_show2"
                android:text="     ②完成指标清晰    5分"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>